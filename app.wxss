/* auth menu */

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 900;
  transition: all 0.2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}

.mask-show {
  opacity: 1;
  visibility: visible;
}

.custom_menu {
  bottom: 0;
  width: 100%;
  /* padding:15px; */
  height: 300px;
  z-index: 900;
  font-size: 16px;
  position: absolute;
  background-color: #fff;
}

.custom_menu_title {
  height: 50px;
  font-size: 14px;
  line-height: 50px;
  text-align: center;
  letter-spacing: 1px;
  font-weight: bolder;
}

.custom_menu_box {
  padding: 10px;
}

.custom_menu_content {
  height: 170px;
}

.custom_menu_content view {
  height: 52px;
  line-height: 52px;
}

.custom_menu_content view:not(:last-child) {
  font-weight: bolder;
  border-bottom: 1px solid #dddee1;
}

.custom_menu_content view:nth-child(2) {
  display: flex;
  font-size: 13px;
  justify-content: space-between;
}

.custom_menu_content view:last-child {
  font-size: 12px;
  color: #5cadff;
}

.custom_menu_second text:last-child {
  color: #495060;
  font-weight: normal;
}

.custom_menu_btn {
  width: 40%;
  background-color: #dddee1;
}

.custom_menu_bottom .custom_menu_btn:nth-child(2) {
  color: #fff;
  background-color: green;
}

.custom_menu_bottom {
  display: flex;
}
