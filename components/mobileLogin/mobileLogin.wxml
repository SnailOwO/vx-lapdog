<view class="login-box content-col">
  <view class="login-account">
    <i-input value="{{ mobile }}" placeholder="请输入手机号" i-class="login-box-inp" autofocus="true" />
  </view>
  <view class="login-code">
    <i-input value="{{ code }}" placeholder="请输入验证码" i-class="login-box-inp" type="password" />
    <!-- <button class="msg-btn" bindtap="sendMsg">发送短信</button> -->
    <label class="msg-btn" bindtap="sendMsg">发送短信</label>
  </view>
</view>
<view class="wx-login content-col" >
  <view class="vx-login-btn">
    <text>>>>微信登录</text>
  </view>
  <i-button open-type="getUserInfo" inline="true" style='opacity: 0;'>微信登录</i-button>
</view>
<view class="login-btn-box">
  <i-button bind:click="login">登录</i-button>
</view>